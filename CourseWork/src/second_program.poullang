program var
{Объявляем переменные}
int1, int2, int3: %;
float1, float2, float3: !;
bool1,bool2, bool3: $;

begin
{Оператор фиксированного цикла}
for float1 as 22.34 to float1<50
do
    [float1 as float1+10.3 : write(1, float1) : float1 as float1+2.1e+1] {составной оператор}
;
float2 as 1.1
;
{Оператор условного цикла}
while float2 <= 100
do
    [float2 as float2*1.3 : bool1 as float2>4 : if bool1 then write(1) else write(0)]
end@
